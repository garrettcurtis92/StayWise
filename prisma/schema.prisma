datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  image     String?
  createdAt DateTime @default(now())
}

model Listing {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  location    String
  latitude    Float?
  longitude   Float?
  createdAt   DateTime @default(now())
}
